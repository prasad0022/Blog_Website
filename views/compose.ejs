<%- include("partials/header") -%>

<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="form-group">
        <label for="postTitle" class="form-label">Title</label>
        <input type="text" class="form-control" name="postTitle" autocomplete="off">
  
        <label for="postContent" class="form-label">Post</label>
        <textarea type="text" class="form-control" name="postContent" cols="40" rows="5"></textarea>
  
    </div>
     
    <button type="submit" class="btn btn-primary" name="publish">Publish</button>
</form>


<%- include("partials/footer") -%>